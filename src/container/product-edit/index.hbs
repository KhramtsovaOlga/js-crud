<section>
  <h1 class='form__title'>Редагування товару</h1>
  {{#with data}}
  <form method="POST" action="/product-edit">
  <div class="form">
    <div class="form__info"> Інформація про товар</div>
      <div class="form__content">
        <div class='form__field'>
          <label for='name' class='form__label'>Назва товару:</label>
          <input
            type='name'
            name='name'
            class='form__input'
          />
        </div>
          <div class='form__field'>
          <label
            for='price'
            class='form__label'
          >Ціна:</label>
          <input
            type='price'
            name='price'
            class='form__input'
          />
          </div>
          <div class='form__field'>
          <label
            for='id'
            class='form__label'
          >ID:</label>
          <input
            type='id'
            name='id'
            class='form__input'
          />
          </div>
          </div>
          <div class='form__field'>
          <label
            for='description'
            class='form__label'
          >Короткий опис товару:</label>
          <input
            type='description'
            name='description'
            class='form__input'
          />
          </div>
          <div class="block__button">
          <button class='confirm__button'>Зберегти оновлення</button>
          <a href="/product-delete?id={{id}}" class='delete__button'>Видалити товар</a>
          </div>
          {{/with}}
</section>

